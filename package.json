{
  "name": "lms-final",
  "version": "1.0.0",
  "private": true,
  "description": "IQ Didactic LMS - Enterprise learning management system",
  "scripts": {
    "dev": "bun run dev:all",
    "dev:all": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd packages/frontend && bun run dev",
    "dev:backend": "cd packages/backend && bun run dev",
    "build": "bun run build:backend",
    "build:frontend": "cd packages/frontend && bun run build",
    "build:backend": "cd packages/backend && bun run build",
    "start": "bun run start:backend",
    "start:backend": "cd packages/backend && bun run start",
    "lint": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "cd packages/frontend && bun run lint",
    "lint:backend": "cd packages/backend && bun run lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,css,md}\"",
    "type-check": "cd packages/frontend && bun run type-check && cd ../backend && bun run type-check",
    "db:migrate": "cd packages/backend && bun run db:migrate",
    "db:generate": "cd packages/backend && bun run db:generate",
    "db:push": "cd packages/backend && bun run db:push",
    "db:seed": "cd packages/backend && bun run db:seed",
    "db:studio": "cd packages/backend && bun run db:studio",
    "test": "bun run test:frontend && bun run test:backend",
    "test:frontend": "cd packages/frontend && bun run test",
    "test:backend": "cd packages/backend && bun run test",
    "test:e2e": "cd packages/frontend && bun run test:e2e"
  },
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/shared"
  ],
  "dependencies": {
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
