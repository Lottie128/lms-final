{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd packages/backend && ~/.bun/bin/bunx prisma generate && chmod +x start.sh"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd packages/backend && bash start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
