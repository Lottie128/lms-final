{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "tsx src/index.ts",
    "start:bun": "bun run src/index.ts",
    "build": "echo 'No build needed - running with tsx'",
    "db:migrate": "bunx prisma migrate dev",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:studio": "bunx prisma studio",
    "db:seed": "bun run src/seed.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.1",
    "@prisma/client": "^5.8.0",
    "elysia": "^0.8.14",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "@elysiajs/swagger": "^0.8.0",
    "tsx": "^4.7.0",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.8.0",
    "typescript": "^5.3.3"
  }
}
